<Window x:Class="ReservaAsientosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Reserva de Asientos" Height="550" Width="750"
        Background="#F0F0F0">

    <DockPanel Margin="15">

        <Border DockPanel.Dock="Top" Background="White" Padding="10" CornerRadius="5" Margin="0,0,0,15" BorderBrush="#CCC" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Aukeratu garraioa:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboZona" Width="200" Height="30" Margin="10,0,0,0" SelectionChanged="ComboZona_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Izen-abizena:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="TxtNombre" Width="250" Height="30" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="PanelAsientos" HorizontalAlignment="Center" VerticalAlignment="Top" ItemWidth="70" ItemHeight="90" Margin="0" />
        </ScrollViewer>

    </DockPanel>
</Window>