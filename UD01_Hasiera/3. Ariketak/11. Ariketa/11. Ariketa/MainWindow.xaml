<Window x:Class="_11._Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <StackPanel x:Name="PanelFormulario" Margin="20">
            <Label Content="Izena"/>
            <TextBox x:Name="txtIzena" Width="200"/>

            <Label Content="1. Abizena"/>
            <TextBox x:Name="txtAbizena1" Width="200"/>

            <Label Content="2. Abizena"/>
            <TextBox x:Name="txtAbizena2" Width="200"/>

            <Label Content="NAN Zenbakia"/>
            <TextBox x:Name="txtNan" Width="200"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Onartu" Click="Onartu_Click" Margin="0,0,10,0"/>
                <Button Content="Begiratu" Click="Begiratu_Click" Margin="0,0,10,0"/>
                <Button Content="Atera" Click="Atera_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="PanelVisualizar" Visibility="Collapsed" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="lblBienvenida" FontSize="16" HorizontalAlignment="Center"/>
            <Button Content="Salir" Click="Atera_Click" Margin="0,20,0,0" Width="100"/>
        </StackPanel>
    </Grid>
</Window>