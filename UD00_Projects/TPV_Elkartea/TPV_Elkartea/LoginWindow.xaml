<Window x:Class="TPV_Elkartea.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="450" 
        Background="#f5f6fa" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titulo -->
        <TextBlock Grid.Row="0" 
                   Text="Iniciar sesion" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Usuario -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Usuario:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="tbUsuario" 
                     Height="35" 
                     FontSize="14"
                     Padding="5"/>
        </StackPanel>

        <!-- Contrasea -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="Contrasena:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="pbContrasena" 
                         Height="35"
                         FontSize="14"
                         Padding="5"/>
        </StackPanel>

        <!-- Boton -->
        <Button Grid.Row="6" 
                Content="Iniciar sesion" 
                Height="40" 
                Background="#2980B9" 
                Foreground="White" 
                FontWeight="Bold"
                FontSize="14"
                BorderThickness="0" 
                Click="BtnLogin_Click" 
                HorizontalAlignment="Stretch"
                Margin="0,10,0,0"/>
    </Grid>
</Window>