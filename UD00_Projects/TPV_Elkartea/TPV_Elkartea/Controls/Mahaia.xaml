<UserControl x:Class="TPV_Elkartea.Controls.Mahaia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SeatUI"
             Width="70" Height="50">

    <Border x:Name="SeatBorder"
            CornerRadius="5"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="LightGreen"
            MouseEnter="SeatBorder_MouseEnter"
            MouseLeave="SeatBorder_MouseLeave"
            MouseLeftButtonDown="SeatBorder_MouseLeftButtonDown">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Id}" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="12"/>
            <TextBlock x:Name="tbReserva"
                       Text="{Binding ReservationName}"
                       HorizontalAlignment="Center"
                       FontSize="8"
                       Foreground="DarkBlue"
                       TextWrapping="Wrap"
                       MaxWidth="65"/>
            <TextBlock x:Name="tbHora"
                       Text="{Binding ReservationTime}"
                       HorizontalAlignment="Center"
                       FontSize="8"
                       Foreground="DarkRed"
                       FontWeight="SemiBold"/>
        </StackPanel>

    </Border>
</UserControl>