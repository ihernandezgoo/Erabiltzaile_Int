<UserControl x:Class="TPV_Elkartea.Controls.Mahaia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SeatUI"
             Width="70" Height="40">

    <Border x:Name="SeatBorder"
            CornerRadius="5"
            BorderBrush="Gray"
            BorderThickness="1"
            Background="LightGreen"
            MouseEnter="SeatBorder_MouseEnter"
            MouseLeave="SeatBorder_MouseLeave"
            MouseLeftButtonDown="SeatBorder_MouseLeftButtonDown">

        <TextBlock Text="{Binding Id}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

    </Border>
</UserControl>