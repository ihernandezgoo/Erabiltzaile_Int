<Window x:Class="TPV_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TPV Moderno" Height="550" Width="900" Background="#f5f6fa" FontFamily="Segoe UI">
    <Grid Margin="10">
        <TabControl x:Name="tabControl" Background="Transparent" BorderThickness="0">

            <!-- TPV -->
            <TabItem Header="TPV" x:Name="tabTPV">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- Panel Productos -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="15" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Categoría -->
                            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                                <TextBlock Text="Categoría" FontWeight="SemiBold" FontSize="15" Foreground="#333"/>
                                <ComboBox x:Name="cbCategoria" SelectionChanged="CbCategoria_SelectionChanged" 
                                          Background="#f0f0f5" BorderBrush="#ccc" FontSize="14" Padding="5"/>
                            </StackPanel>

                            <!-- Productos -->
                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="icProductos" SelectionMode="Single" BorderThickness="0" Background="Transparent"
                                         MouseDoubleClick="icProductos_MouseDoubleClick">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="160" Height="220" Margin="10" CornerRadius="12"
                                                    Background="White" Cursor="Hand" Padding="5">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                                </Border.Effect>
                                                <StackPanel>
                                                    <!-- Imagen simulada -->
                                                    <Border Height="100" Background="#3498DB" CornerRadius="10"/>
                                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16"
                                                               HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Precio, StringFormat=C}" Foreground="#27AE60"
                                                               FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Panel Carrito -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Carrito" FontWeight="SemiBold" FontSize="15" Foreground="#333"/>
                            <DataGrid x:Name="dgCarrito" AutoGenerateColumns="False" Height="300" CanUserAddRows="False"
                                      IsReadOnly="True" SelectionMode="Single"
                                      GridLinesVisibility="None" RowBackground="#fdfdfd" AlternatingRowBackground="#f5f5f5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*" />
                                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="Auto"/>
                                    <DataGridTextColumn Header="Precio" Binding="{Binding Producto.Precio}" Width="Auto"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="Auto"/>
                                    <DataGridTemplateColumn Header="Acciones" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Content="✏️" Click="BtnEditarCantidadFila_Click" Margin="0,0,5,0" Padding="5"
                                                            Background="#F1C40F" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                    <Button Content="🗑️" Click="BtnEliminarProductoFila_Click" Padding="5"
                                                            Background="#E74C3C" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock x:Name="tbTotal" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                            <Button Content="Ir a Ticket" Click="BtnIrTicket_Click"
                                    Margin="0,10,0,0" Background="#2980B9" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Ticket -->
            <TabItem Header="Ticket" x:Name="tabTicket">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="TICKET" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                        <TextBox x:Name="tbTicket" Height="350" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" TextAlignment="Center"
                                 Background="#f0f2f5" BorderBrush="#ccc" FontFamily="Consolas" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Confirmar Pedido" Click="BtnConfirmarPedido_Click"
                                    Margin="0,0,5,0" Background="#27AE60" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                            <Button Content="Volver al TPV" Click="BtnVolverTPV_Click"
                                    Background="#E74C3C" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Editar Productos -->
            <TabItem Header="Editar Productos" x:Name="tabEditarProductos">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Editor de Productos (JSON)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                        <TextBox x:Name="tbJsonProductos" Height="400" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" Background="#f0f2f5" BorderBrush="#ccc"/>
                        <Button Content="Guardar Productos" Click="BtnGuardarProductos_Click"
                                Margin="0,10,0,0" Background="#27AE60" Foreground="White"
                                FontWeight="Bold" Padding="8" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Editar Usuarios -->
            <TabItem Header="Editar Usuarios" x:Name="tabEditarUsuarios">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Editor de Usuarios (JSON)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                        <TextBox x:Name="tbJsonUsuarios" Height="400" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" Background="#f0f2f5" BorderBrush="#ccc"/>
                        <Button Content="Guardar Usuarios" Click="BtnGuardarUsuarios_Click"
                                Margin="0,10,0,0" Background="#27AE60" Foreground="White"
                                FontWeight="Bold" Padding="8" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>