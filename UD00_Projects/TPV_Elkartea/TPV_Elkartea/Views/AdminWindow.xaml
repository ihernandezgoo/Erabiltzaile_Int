<Window x:Class="TPV_Elkartea.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin panela" Height="700" Width="1200"
        Background="#f5f6fa" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl x:Name="tabControl" Background="Transparent" BorderThickness="0">

            <!-- Produktuak fitxa -->
            <TabItem Header="Produktuak">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" CanUserAddRows="False"
                              SelectionMode="Single" GridLinesVisibility="None"
                              RowBackground="#fdfdfd" AlternatingRowBackground="#f5f5f5" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridTextColumn Header="Izena" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Prezioa" Binding="{Binding Precio}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                            <DataGridTextColumn Header="Irudi URL" Binding="{Binding img}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Gehitu" Click="BtnAnadirProducto_Click" Margin="0,0,5,0"
                                Background="#27AE60" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Ezabatu" Click="BtnEliminarProducto_Click" Margin="0,0,5,0"
                                Background="#E74C3C" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Gorde aldaketak" Click="BtnGuardarProductos_Click"
                                Background="#3498DB" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Erabiltzaileak fitxa -->
            <TabItem Header="Erabiltzaileak">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" CanUserAddRows="False"
                              SelectionMode="Single" GridLinesVisibility="None"
                              RowBackground="#fdfdfd" AlternatingRowBackground="#f5f5f5" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridTextColumn Header="Izena" Binding="{Binding Izena}" Width="*"/>
                            <DataGridTextColumn Header="Rola" Binding="{Binding Rola}" Width="120"/>
                            <DataGridTextColumn Header="Pasahitza" Binding="{Binding Pasahitza}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Gehitu" Click="BtnAnadirUsuario_Click" Margin="0,0,5,0"
                                Background="#27AE60" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Ezabatu" Click="BtnEliminarUsuario_Click" Margin="0,0,5,0"
                                Background="#E74C3C" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Gorde aldaketak" Click="BtnGuardarUsuarios_Click"
                                Background="#3498DB" Foreground="White" Padding="8" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>