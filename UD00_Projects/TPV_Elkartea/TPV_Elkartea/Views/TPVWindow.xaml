<Window x:Class="TPV_Elkartea.Views.TPVWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TPV Panela" Height="700" Width="1200" Background="#f5f6fa" FontFamily="Segoe UI">
    <Grid Margin="10">
        <TabControl x:Name="tabControl" Background="Transparent" BorderThickness="0">
            <!-- TPV -->
            <TabItem Header="TPV" x:Name="tabTPV">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <!-- Produktuen panela -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="15" Margin="5">
                        <Grid>
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <ListView x:Name="icProductos" SelectionMode="Single" BorderThickness="0" Background="Transparent"
                                         MouseDoubleClick="icProductos_MouseDoubleClick">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>

                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="160" Height="220" Margin="10" CornerRadius="12"
                                                    Background="White" Cursor="Hand" Padding="5">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                                </Border.Effect>
                                                <StackPanel>
                                                    <Image Height="150" Stretch="UniformToFill" Margin="0,0,0,5">
                                                        <Image.Source>
                                                            <BitmapImage UriSource="{Binding img}" />
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16"
                                                               HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Precio, StringFormat={}{0:F2} €}" 
                                                               Foreground="#27AE60"
                                                               FontWeight="SemiBold" 
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                    <!-- Karritoa panela -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Karritoa" FontWeight="SemiBold" FontSize="15" Foreground="#333"/>
                            <DataGrid x:Name="dgCarrito" AutoGenerateColumns="False" Height="300" CanUserAddRows="False"
                                      IsReadOnly="True" SelectionMode="Single"
                                      GridLinesVisibility="None" RowBackground="#fdfdfd" AlternatingRowBackground="#f5f5f5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Produktua" Binding="{Binding Producto.Nombre}" Width="*" />
                                    <DataGridTextColumn Header="Kantitatea" Binding="{Binding Cantidad}" Width="Auto"/>
                                    <DataGridTextColumn Header="Prezioa" Binding="{Binding Producto.Precio}" Width="Auto"/>
                                    <DataGridTextColumn Header="Totala" Binding="{Binding Total}" Width="Auto"/>
                                    <DataGridTemplateColumn Header="Akzioak" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Content="✏️" Click="BtnEditarCantidadFila_Click" Margin="0,0,5,0" Padding="5"
                                                            Background="#F1C40F" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                    <Button Content="🗑️" Click="BtnEliminarProductoFila_Click" Padding="5"
                                                            Background="#E74C3C" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock x:Name="tbTotal" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
                            <Button Content="Ticket-a ikusi" Click="BtnIrTicket_Click"
                                    Margin="0,10,0,0" Background="#2980B9" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Ticket -->
            <TabItem Header="Ticket" x:Name="tabTicket">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="TICKET" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                        <TextBox x:Name="tbTicket" Height="350" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" TextAlignment="Center"
                                 Background="#f0f2f5" BorderBrush="#ccc" FontFamily="Consolas" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Ordena konfirmatu" Click="BtnConfirmarPedido_Click"
                                    Margin="0,0,5,0" Background="#27AE60" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                            <Button Content="TPV-ra bueltatu" Click="BtnVolverTPV_Click"
                                    Background="#E74C3C" Foreground="White" FontWeight="Bold"
                                    Padding="8" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Erreserbak -->
            <TabItem Header="Erreserbak" x:Name="erreserbak">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Erabiltzailearen goiburua -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                        <TextBlock Text="Erabiltzailea: " FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock x:Name="tbUsuarioActual" FontSize="16" Foreground="#2980B9" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Ordu hautatzailea eta botoiak -->
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Erreserbaren ordua:" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cbHoras" Width="80" Height="35" FontSize="14" VerticalContentAlignment="Center" SelectedIndex="0"/>
                            <TextBlock Text=":" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Margin="5,0"/>
                            <ComboBox x:Name="cbMinutos" Width="80" Height="35" FontSize="14" VerticalContentAlignment="Center" SelectedIndex="0"/>
                            
                            <Button Content="Garbitu guztiak" Click="BtnGarbituMahaiak_Click" 
                                    Margin="30,0,0,0" Background="#E74C3C" Foreground="White" 
                                    FontWeight="Bold" Padding="10,5" BorderThickness="0" Cursor="Hand" Height="35"/>
                        </StackPanel>
                    </Border>

                    <!-- Mahaien panela -->
                    <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <WrapPanel x:Name="wpMahaiak" ItemWidth="80" ItemHeight="60" HorizontalAlignment="Center">
                                <!-- Mahaiak dinamikoki gehituko dira -->
                            </WrapPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
