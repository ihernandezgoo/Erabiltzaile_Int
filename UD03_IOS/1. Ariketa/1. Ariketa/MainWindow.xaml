<Window x:Class="_1._Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="_1._Ariketa"
        Title="Leku Erreserba Sistema Anitza" Height="600" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Label Content="Garraio Mota:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="garraioMotaComboBox" Width="150" Margin="5" VerticalContentAlignment="Center" SelectionChanged="GarraioMotaComboBox_SelectionChanged">
                <ComboBoxItem Content="Autobusa"/>
                <ComboBoxItem Content="Trena"/>
                <ComboBoxItem Content="Hegazkina"/>
            </ComboBox>
            <Label Content="Erreserba Data:" VerticalAlignment="Center" FontWeight="Bold" Margin="30,0,0,0"/>
            <DatePicker x:Name="erreserbaDatePicker" Width="150" Margin="5" VerticalContentAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" BorderBrush="Gray" BorderThickness="1">
            <Grid x:Name="eserlekuenGrid" Background="#FFE5E5E5" Margin="10"/>
        </ScrollViewer>

        <Button x:Name="erreserbatuButton" Grid.Row="2" Content="Erreserbatu Hautatutakoak" HorizontalAlignment="Center" Margin="0,15,0,0" Padding="15,8" FontSize="14" FontWeight="Bold" Background="#FF4CAF50" Foreground="White" Click="ErreserbatuButton_Click"/>
    </Grid>
</Window>