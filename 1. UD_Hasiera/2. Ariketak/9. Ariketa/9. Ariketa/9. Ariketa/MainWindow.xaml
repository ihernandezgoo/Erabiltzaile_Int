<Window x:Class="_9._Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9._Ariketa"
        mc:Ignorable="d"
        Title="Lista de Amigos" Height="450" Width="800">
    <Grid>
        <Label Content="Mis Amigos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <ListBox Name="lstAmigos" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="150" Margin="20,50,0,0" MouseDoubleClick="lstAmigos_MouseDoubleClick"/>

        <Button Content="Añadir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="240,50,0,0" Click="BtnAñadir_Click"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="240,100,0,0" Click="BtnEliminar_Click"/>
        <Button Content="Borrar Lista" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="240,150,0,0" Click="BtnBorrarLista_Click"/>

        <Label Content="Amigo Seleccionado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0"/>
        <TextBox Name="txtAmigoSeleccionado" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="20,250,0,0"/>

        <Label Content="Amigo Nuevo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,300,0,0"/>
        <TextBox Name="txtAmigoNuevo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="20,330,0,0"/>

        <Button Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="240,330,0,0" Click="Atera"/>
    </Grid>
</Window>
