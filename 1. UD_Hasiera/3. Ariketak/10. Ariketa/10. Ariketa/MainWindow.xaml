<Window x:Class="_10._Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visualizar imágenes" Height="500" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="MIS IMÁGENES"
               Grid.Row="0"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Content="1ª Fila"/>
                <ComboBox x:Name="ImagenComboBox"
                          Width="150"
                          SelectionChanged="ImagenComboBox_SelectionChanged">
                    <ComboBoxItem Content="1. Argazkia"/>
                    <ComboBoxItem Content="2. Argazkia"/>
                    <ComboBoxItem Content="3. Argazkia"/>
                </ComboBox>
            </StackPanel>

            <!-- Imagen seleccionada -->
            <Image x:Name="SeleccionImagen"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Width="200"
                   Height="150"
                   Margin="20,0,0,0"/>
        </Grid>

        <!-- Fila 2: CheckBox + Varias imágenes -->
        <Grid Grid.Row="2" Margin="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CheckBoxes -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Content="2ª Fila"/>
                <CheckBox x:Name="CheckImagen4" Content="4. Argazkia" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                <CheckBox x:Name="CheckImagen5" Content="5. Argazkia" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                <CheckBox x:Name="CheckImagen6" Content="6. Argazkia" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
            </StackPanel>

            <!-- Imágenes de la segunda fila -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Image x:Name="Fila2Imagen1" Width="180" Height="120" Stretch="Uniform" Margin="5"/>
                <Image x:Name="Fila2Imagen2" Width="180" Height="120" Stretch="Uniform" Margin="5"/>
                <Image x:Name="Fila2Imagen3" Width="180" Height="120" Stretch="Uniform" Margin="5"/>
            </StackPanel>
        </Grid>

        <!-- Botón SALIR -->
        <Button Content="ATERA"
                Grid.Row="3"
                HorizontalAlignment="Right"
                Width="100"
                Height="30"
                Click="Salir_Click"/>
    </Grid>
</Window>