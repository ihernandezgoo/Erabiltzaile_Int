<Window x:Class="_4._Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._Ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Erabiltzailea" Content="Erabiltzailea:" HorizontalAlignment="Left" Margin="160,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.205,0.523"/>
        <Label x:Name="Pasahitza" Content="Pasahitza: " HorizontalAlignment="Left" Margin="160,154,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.205,0.523"/>
        <PasswordBox x:Name="PasahitzaTxt" HorizontalAlignment="Left" Margin="250,160,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="ErabiltzaileTxt" HorizontalAlignment="Left" Margin="250,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" TextChanged="TextBox_TextChanged"/>
        <Button Content="Sartu" HorizontalAlignment="Left" Margin="160,204,0,0" VerticalAlignment="Top" Click="Sartu"/>
        <Button Content="Garbitu" HorizontalAlignment="Left" Margin="260,204,0,0" VerticalAlignment="Top" Width="45" Click="Garbitu"/>
        <Button Content="Atera" HorizontalAlignment="Left" Margin="368,204,0,0" VerticalAlignment="Top" IsDefault="True" Click="Atera"/>
        <TextBox x:Name="Emaitza" HorizontalAlignment="Left" Margin="160,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>

    </Grid>
</Window>
