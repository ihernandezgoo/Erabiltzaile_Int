<Window x:Class="_1._Ariketak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1._Ariketak"
        mc:Ignorable="d"
        Title="1. Ariketa" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.473,0.516" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Primer Número" HorizontalAlignment="Left" Height="27" Margin="40,43,0,0" VerticalAlignment="Top" Width="110" Foreground="DarkRed" Grid.Column="1"/>
        <Label Content="Segundo Número" HorizontalAlignment="Left" Height="27" Margin="40,94,0,0" VerticalAlignment="Top" Width="110" Foreground="DarkRed" Grid.Column="1"/>
        <Label Content="Tercer Número" HorizontalAlignment="Left" Height="28" Margin="40,152,0,0" VerticalAlignment="Top" Width="110" Foreground="DarkRed" Grid.Column="1"/>
        <Label Content="Cuarto Número" HorizontalAlignment="Left" Height="27" Margin="40,210,0,0" VerticalAlignment="Top" Width="110" Foreground="DarkRed" Grid.Column="1"/>
        <Label Content="RESULTADO" HorizontalAlignment="Left" Height="26" Margin="40,294,0,0" VerticalAlignment="Top" Width="110" Foreground="DarkBlue" Grid.Column="1"/>

        <TextBox Name="PrimerNumero" HorizontalAlignment="Left" Height="27" Margin="296,43,0,0" VerticalAlignment="Top" Width="330" PreviewTextInput="ValidarEntradaNumerica" TextChanged="PrimerNumero_TextChanged" Grid.Column="1"/>
        <TextBox Name="SegundoNumero" HorizontalAlignment="Left" Height="27" Margin="296,94,0,0" VerticalAlignment="Top" Width="330" PreviewTextInput="ValidarEntradaNumerica" Grid.Column="1"/>
        <TextBox Name="TercerNumero" HorizontalAlignment="Left" Height="28" Margin="296,152,0,0" VerticalAlignment="Top" Width="330" PreviewTextInput="ValidarEntradaNumerica" Grid.Column="1"/>
        <TextBox Name="CuartoNumero" HorizontalAlignment="Left" Height="27" Margin="296,210,0,0" VerticalAlignment="Top" Width="330" PreviewTextInput="ValidarEntradaNumerica" Grid.Column="1"/>
        <TextBox Name="Resultado" HorizontalAlignment="Left" Height="27" Margin="296,294,0,0" VerticalAlignment="Top" Width="330" IsReadOnly="True" Grid.Column="1"/>

        <Button Content="Operar" HorizontalAlignment="Left" Margin="55,388,0,0" VerticalAlignment="Top" Click="Operar" Grid.Column="1"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="296,388,0,0" VerticalAlignment="Top" Click="Limpiar" Grid.Column="1"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="583,388,0,0" VerticalAlignment="Top" Click="Salir" Grid.Column="1"/>
    </Grid>
</Window>
